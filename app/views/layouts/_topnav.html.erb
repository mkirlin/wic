<div>
  <div class="container">
    <div class="row">
      <nav class="col-12 navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="/"><h4>Women In Comedy</h4></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <% if current_user %>
                <%= link_to('Profile', user_path(current_user), {class: "nav-link"}) %>
              <% else %>
                <%= link_to('Log In', new_user_session_path, {class: "nav-link"}) %>
              <% end %>
            </li>
            <% if current_user %>
              <li class="nav-item">
                <%= link_to('Log Out', destroy_user_session_path, {method: :delete, class: "nav-link"}) %>
              </li>
            <% end %>
          </ul>
          <%= bootstrap_form_tag(url: "/search", layout: :inline) do |f| %>
            <%= f.search_field :search, hide_label: true, control_class: "form-control mr-sm-2", placeholder: "Search Users" %>
            <%= f.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</div>